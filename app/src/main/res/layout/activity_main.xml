<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/background"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="centerCrop"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dateText" android:textSize="36sp"
            android:textAlignment="center" android:textColor="@android:color/white"
            android:layout_marginTop="36dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:background="@color/textBackground"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/timeText"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="36sp" android:textAlignment="center"
            android:textColor="@android:color/white" android:background="@color/textBackground"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/dateText"/>
    <Button
            android:text="アラームをセットする"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setAlarm" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/timeText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="@+id/imageView"
            android:layout_marginStart="32dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancelAlarm" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/setAlarm" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:text="アラームをキャンセルする"/>
</androidx.constraintlayout.widget.ConstraintLayout>